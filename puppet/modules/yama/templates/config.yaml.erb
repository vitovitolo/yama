# YAMA config file
#

# IP address to bind
host: <%=@ip%>

# Port to bind
port: <%=@port%>

#### MAIN DATABASE #####
# DB hostname
db_hostname: 'localhost'

# DB username
db_username: '<%=@main_db_username%>'

# DB passwd
db_passwd: '<%=@main_db_passwd%>'

# DB name
db_name: '<%=@main_db_name%>'

#### SHARD DATABASE ####
# DB hostname for shards
shard_db_hostname: '<%=@shard_db_hostname%>'

# DB username for shards
shard_db_username: '<%=@shard_db_username%>'

# DB passwd for shards
shard_db_passwd: '<%=@shard_db_passwd%>'

# DB name for shards
shard_db_name: '<%=@shard_db_name%>'

#### CACHE #####
cache_hostname: 'localhost'

# Cache max number of URL to store
# Depends on your server memory 
cache_max_urls: <%=@cache_max_urls%>

# URL Time To Live in seconds
cache_url_ttl: <%=@cache_url_ttl%>
